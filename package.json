{
    "name": "svggeom",
    "type": "module",
    "license": "MPL-2.0",
    "main": "dist/index.js",
    "version": "1.0.0",
    "author": "",
    "description": "",
    "exports": {
        ".": "./dist/index.js"
    },
    "scripts": {
        "c8rephtml": "c8 report -r html",
        "c8report": "c8 report -r text-lcov > coverage/lcov.info",
        "up:devel": "python -B -m ghdevapi.up -A biojet1/svggeom . -m . -r devel -a",
        "up": "python -B -m ghdevapi up -A biojet1/svggeom . -m . -r main -a",
        "test": "c8 npx tap -t600 --no-coverage --reporter=terse 'test/*.tap.*js'",
        "dts": "npm-dts generate",
        "fix": "gts fix",
        "compile": "tsc -d",
        "clean": "gts clean",
        "prepare": "tsc -d --removeComments",
        "lint": "gts lint"
    },
    "files": [
        "dist",
        "*.d.ts"
    ],
    "_eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "parser": "@typescript-eslint/parser",
        "rules": {
            "indent": [
                "error",
                "tab"
            ]
        }
    },
    "c8": {
        "temp-directory": "/tmp/svggeom.c8/tmp",
        "reports-dir": "/tmp/svggeom.c8/rep",
        "src": "dist"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/opentype.js": "^1.3.3",
        "tap": "^15.0.9"
    },
    "dependencies": {
        "opentype.js": "^1.3.4"
    },
    "_": {
        "typescript": "^4.4"
    }
}
